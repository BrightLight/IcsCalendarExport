@model CalendarInputModel

<form asp-action="GenerateCalendar" method="post">
    <div class="form-group">
        <label for="Urls">ICS Calendar URLs</label>
        <input type="text" name="Urls" class="form-control" placeholder="Enter URLs separated by commas">
    </div>
    <div class="form-group">
        <label for="Year">Year</label>
        <input type="number" name="Year" class="form-control" placeholder="Enter year">
    </div>
    <button type="submit" class="btn btn-primary">Generate Calendar</button>
</form>
